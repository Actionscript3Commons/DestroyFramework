<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/halo"
				focusEnabled="false">
	
	<s:states>
		<s:State name="normal" />            
		<s:State name="hovered" />
		<s:State name="selected" />
		<s:State name="normalAndShowsCaret"/>
		<s:State name="hoveredAndShowsCaret"/>
		<s:State name="selectedAndShowsCaret"/>
	</s:states>
	
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:entries>
					<s:GradientEntry color.normal="0x323232"
									 color.normalAndShowsCaret="0x323232"
									 color.hovered="0x424242"	
									 color.hoveredAndShowsCaret="0x424242"
									 color.selected="0x229BBA"
									 color.selectedAndShowsCaret="0x229BBA" />
					<s:GradientEntry color.normal="0x323232"
									 color.normalAndShowsCaret="0x323232"
									 color.hovered="0x424242"	
									 color.hoveredAndShowsCaret="0x424242"
									 color.selected="0x007998"
									 color.selectedAndShowsCaret="0x007998" />
				</s:entries>
						
						
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:Label id="labelDisplay" textAlign="left" verticalAlign="middle"
			 verticalCenter="1"
			 top="6" bottom="6" left="6" right="6"
			 color="0xC3C6C8" color.selected="0xFFFFFF" color.selectedAndShowsCaret="0xFFFFFF"
	/>
</s:ItemRenderer>
